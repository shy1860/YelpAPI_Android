<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="346dp"
        android:layout_height="150dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReview11"
        android:layout_width="326dp"
        android:layout_height="172dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView11"
        app:layout_constraintStart_toStartOf="@+id/imageView11"
        app:layout_constraintTop_toBottomOf="@+id/imageView11" />

    <Button
        android:id="@+id/btnBack2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/favBtn11"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/txtAddress11"
        android:layout_width="293dp"
        android:layout_height="141dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtRestName11"
        app:layout_constraintStart_toStartOf="@+id/txtRestName11"
        app:layout_constraintTop_toBottomOf="@+id/txtRestName11" />

    <TextView
        android:id="@+id/txtCreated11"
        android:layout_width="118dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/txtReview11"
        app:layout_constraintTop_toBottomOf="@+id/txtReview11" />

    <TextView
        android:id="@+id/txtUserName11"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/txtReview11"
        app:layout_constraintTop_toBottomOf="@+id/txtReview11" />

    <TextView
        android:id="@+id/txtRestName11"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="50dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView11" />

    <Button
        android:id="@+id/favBtn11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:text="Remove me!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>