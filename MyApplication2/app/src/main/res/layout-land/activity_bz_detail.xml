<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="346dp"
        android:layout_height="150dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtReview"
        android:layout_width="326dp"
        android:layout_height="172dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtUserName"
        android:layout_width="118dp"
        android:layout_height="52dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        android:textStyle="italic"
        app:layout_constraintStart_toStartOf="@+id/txtReview"
        app:layout_constraintTop_toBottomOf="@+id/txtReview" />

    <TextView
        android:id="@+id/txtRestName"
        android:layout_width="294dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:layout_marginEnd="50dp"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView" />

    <TextView
        android:id="@+id/txtAddress"
        android:layout_width="293dp"
        android:layout_height="141dp"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="@+id/txtRestName"
        app:layout_constraintStart_toStartOf="@+id/txtRestName"
        app:layout_constraintTop_toBottomOf="@+id/txtRestName" />

    <TextView
        android:id="@+id/txtCreated"
        android:layout_width="112dp"
        android:layout_height="54dp"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/background_dark"
        app:layout_constraintEnd_toEndOf="@+id/txtReview"
        app:layout_constraintTop_toBottomOf="@+id/txtReview" />

    <Button
        android:id="@+id/favBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="30dp"
        android:text="Fav!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBack4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="@+id/favBtn"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>